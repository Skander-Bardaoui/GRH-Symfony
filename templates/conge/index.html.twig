{% extends 'base.html.twig' %}

{% block title %}My Congés{% endblock %}

{% block stylesheets %}
<style>
    .page-header {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(20px);
        -webkit-backdrop-filter: blur(20px);
        border-radius: 20px;
        padding: 2rem;
        margin-bottom: 2rem;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.3);
        animation: fadeInDown 0.6s ease;
    }

    @keyframes fadeInDown {
        from {
            opacity: 0;
            transform: translateY(-20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .page-header h1 {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        font-weight: 800;
        font-size: 2.5rem;
        margin: 0;
        display: inline-flex;
        align-items: center;
        gap: 0.75rem;
    }

    .page-header h1 i {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        animation: heartbeat 1.5s ease-in-out infinite;
    }

    @keyframes heartbeat {
        0%, 100% { transform: scale(1); }
        25% { transform: scale(1.1); }
        50% { transform: scale(1); }
    }

    .btn-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        padding: 0.75rem 1.5rem;
        border-radius: 12px;
        font-weight: 600;
        transition: all 0.3s ease;
        box-shadow: 0 10px 30px rgba(102, 126, 234, 0.3);
        position: relative;
        overflow: hidden;
    }

    .btn-primary::before {
        content: '';
        position: absolute;
        top: 50%;
        left: 50%;
        width: 0;
        height: 0;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.3);
        transform: translate(-50%, -50%);
        transition: width 0.6s ease, height 0.6s ease;
    }

    .btn-primary:hover::before {
        width: 300px;
        height: 300px;
    }

    .btn-primary:hover {
        transform: translateY(-3px);
        box-shadow: 0 15px 40px rgba(102, 126, 234, 0.4);
        background: linear-gradient(135deg, #764ba2 0%, #667eea 100%);
    }

    .btn-primary i {
        position: relative;
        z-index: 1;
        transition: transform 0.3s ease;
    }

    .btn-primary:hover i {
        transform: rotate(90deg);
    }

    .btn-warning {
        background: linear-gradient(135deg, #fbbf24 0%, #f59e0b 100%);
        border: none;
        padding: 0.5rem 1rem;
        border-radius: 8px;
        font-weight: 600;
        transition: all 0.3s ease;
        box-shadow: 0 5px 15px rgba(251, 191, 36, 0.3);
    }

    .btn-warning:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(251, 191, 36, 0.4);
        background: linear-gradient(135deg, #f59e0b 0%, #fbbf24 100%);
    }

    .btn-danger {
        background: linear-gradient(135deg, #f87171 0%, #ef4444 100%);
        border: none;
        padding: 0.5rem 1rem;
        border-radius: 8px;
        font-weight: 600;
        transition: all 0.3s ease;
        box-shadow: 0 5px 15px rgba(239, 68, 68, 0.3);
    }

    .btn-danger:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(239, 68, 68, 0.4);
        background: linear-gradient(135deg, #ef4444 0%, #f87171 100%);
    }

    .conge-card {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(20px);
        -webkit-backdrop-filter: blur(20px);
        border-radius: 20px;
        border: 1px solid rgba(255, 255, 255, 0.3);
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.08);
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        overflow: hidden;
        position: relative;
        height: 100%;
        animation: fadeInUp 0.6s ease backwards;
    }

    .conge-card:nth-child(1) { animation-delay: 0.1s; }
    .conge-card:nth-child(2) { animation-delay: 0.2s; }
    .conge-card:nth-child(3) { animation-delay: 0.3s; }
    .conge-card:nth-child(4) { animation-delay: 0.4s; }
    .conge-card:nth-child(5) { animation-delay: 0.5s; }
    .conge-card:nth-child(6) { animation-delay: 0.6s; }

    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .conge-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 5px;
        background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
        transform: scaleX(0);
        transform-origin: left;
        transition: transform 0.4s ease;
    }

    .conge-card:hover {
        transform: translateY(-10px) scale(1.02);
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.15);
    }

    .conge-card:hover::before {
        transform: scaleX(1);
    }

    .card-body {
        padding: 1.75rem;
    }

    .card-title {
        font-size: 1.25rem;
        font-weight: 700;
        color: #1e293b;
        margin-bottom: 0;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .card-title i {
        color: #667eea;
        font-size: 1.1rem;
    }

    .badge {
        padding: 0.5rem 1rem;
        border-radius: 10px;
        font-weight: 600;
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        display: inline-flex;
        align-items: center;
        gap: 0.4rem;
        transition: all 0.3s ease;
    }

    .badge:hover {
        transform: scale(1.05);
    }

    .badge.bg-warning {
        background: linear-gradient(135deg, #fbbf24, #f59e0b) !important;
        color: #fff !important;
        box-shadow: 0 4px 15px rgba(251, 191, 36, 0.3);
    }

    .badge.bg-success {
        background: linear-gradient(135deg, #34d399, #10b981) !important;
        box-shadow: 0 4px 15px rgba(16, 185, 129, 0.3);
    }

    .badge.bg-danger {
        background: linear-gradient(135deg, #f87171, #ef4444) !important;
        box-shadow: 0 4px 15px rgba(239, 68, 68, 0.3);
    }

    .date-section {
        margin-top: 1.5rem;
    }

    .date-info {
        background: linear-gradient(135deg, #f8fafc, #f1f5f9);
        padding: 1rem;
        border-radius: 12px;
        margin-bottom: 0.75rem;
        transition: all 0.3s ease;
        border: 1px solid transparent;
    }

    .date-info:hover {
        background: linear-gradient(135deg, #e0e7ff, #ddd6fe);
        border-color: rgba(102, 126, 234, 0.3);
        transform: translateX(5px);
    }

    .date-info i {
        font-size: 1.4rem;
        color: #667eea;
        transition: transform 0.3s ease;
    }

    .date-info:hover i {
        transform: scale(1.1) rotate(5deg);
    }

    .date-label {
        font-size: 0.7rem;
        color: #64748b;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 0.25rem;
    }

    .date-value {
        font-size: 1rem;
        font-weight: 700;
        color: #1e293b;
    }

    .duration-badge {
        background: linear-gradient(135deg, #667eea, #764ba2);
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 10px;
        font-size: 0.875rem;
        font-weight: 600;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        margin-top: 1rem;
        box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
        transition: all 0.3s ease;
    }

    .duration-badge:hover {
        transform: scale(1.05);
        box-shadow: 0 6px 20px rgba(102, 126, 234, 0.4);
    }

    .action-buttons {
        margin-top: 1.5rem;
        padding-top: 1.5rem;
        border-top: 1px solid rgba(0, 0, 0, 0.1);
        display: flex;
        gap: 0.5rem;
        justify-content: center;
    }

    .action-buttons .btn {
        flex: 1;
        max-width: 120px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        font-size: 0.875rem;
    }

    .empty-state {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(20px);
        -webkit-backdrop-filter: blur(20px);
        border-radius: 20px;
        border: 1px solid rgba(255, 255, 255, 0.3);
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.1);
        padding: 4rem 2rem;
        text-align: center;
        animation: fadeInUp 0.6s ease;
    }

    .empty-state-icon {
        font-size: 6rem;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin-bottom: 1.5rem;
        display: inline-block;
        animation: float 3s ease-in-out infinite;
    }

    @keyframes float {
        0%, 100% { 
            transform: translateY(0px) rotate(0deg); 
        }
        25% { 
            transform: translateY(-10px) rotate(-5deg); 
        }
        75% { 
            transform: translateY(-10px) rotate(5deg); 
        }
    }

    .empty-state h5 {
        font-size: 1.75rem;
        font-weight: 700;
        color: #1e293b;
        margin-bottom: 1rem;
    }

    .empty-state p {
        color: #64748b;
        font-size: 1.1rem;
        margin-bottom: 2rem;
        max-width: 500px;
        margin-left: auto;
        margin-right: auto;
    }

    .stats-badge {
        display: inline-block;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 0.6rem 1.25rem;
        border-radius: 12px;
        font-weight: 600;
        font-size: 0.9rem;
        margin-left: 1rem;
        box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
        transition: all 0.3s ease;
    }

    .stats-badge:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(102, 126, 234, 0.4);
    }

    .stats-badge i {
        margin-right: 0.5rem;
    }

    .edit-form {
        background: linear-gradient(135deg, #f8fafc, #f1f5f9);
        padding: 1.5rem;
        border-radius: 12px;
        margin-top: 1rem;
        border: 1px solid rgba(102, 126, 234, 0.2);
        animation: slideDown 0.3s ease;
    }

    @keyframes slideDown {
        from {
            opacity: 0;
            transform: translateY(-10px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .form-group {
        margin-bottom: 1rem;
    }

    .form-label {
        font-weight: 600;
        color: #374151;
        margin-bottom: 0.5rem;
    }

    .form-control {
        border: 1px solid #d1d5db;
        border-radius: 8px;
        padding: 0.75rem;
        transition: all 0.3s ease;
    }

    .form-control:focus {
        border-color: #667eea;
        box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
    }

    @media (max-width: 768px) {
        .page-header {
            padding: 1.5rem;
        }

        .page-header h1 {
            font-size: 1.75rem;
        }
        
        .stats-badge {
            display: block;
            margin: 1rem 0 0 0;
            width: fit-content;
        }

        .btn-primary {
            width: 100%;
            margin-top: 1rem;
        }

        .empty-state {
            padding: 3rem 1.5rem;
        }

        .empty-state-icon {
            font-size: 4rem;
        }

        .action-buttons {
            flex-direction: column;
        }

        .action-buttons .btn {
            max-width: 100%;
        }
    }

    @media (max-width: 576px) {
        .card-body {
            padding: 1.25rem;
        }

        .date-info {
            padding: 0.75rem;
        }
    }
</style>
{% endblock %}

{% block body %}
<div class="container">
    <div class="page-header">
        <div class="d-flex justify-content-between align-items-center flex-wrap">
            <div>
                <h1>
                    <i class="bi bi-calendar-heart"></i>
                    <span>My Congés</span>
                </h1>
                {% if conges|length > 0 %}
                    <span class="stats-badge">
                        <i class="bi bi-file-text"></i>{{ conges|length }} Request{{ conges|length > 1 ? 's' : '' }}
                    </span>
                {% endif %}
            </div>
            <a href="{{ path('conge_new') }}" class="btn btn-primary">
                <i class="bi bi-plus-circle me-2"></i>New Request
            </a>
        </div>
    </div>

    {% if conges|length > 0 %}
        <div class="row">
            {% for conge in conges %}
                <div class="col-12 col-md-6 col-xl-4 mb-4">
                    <div class="conge-card">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <h5 class="card-title">
                                    <i class="bi bi-file-earmark-text"></i>
                                    Request #{{ conge.id }}
                                </h5>
                                <div>
                                    {% if conge.status == 'pending' %}
                                        <span class="badge bg-warning">
                                            <i class="bi bi-clock-history"></i>Pending
                                        </span>
                                    {% elseif conge.status == 'approved' %}
                                        <span class="badge bg-success">
                                            <i class="bi bi-check-circle"></i>Approved
                                        </span>
                                    {% else %}
                                        <span class="badge bg-danger">
                                            <i class="bi bi-x-circle"></i>Rejected
                                        </span>
                                    {% endif %}
                                </div>
                            </div>
                            
                            <div class="date-section">
                                <div class="date-info">
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-calendar-check me-3"></i>
                                        <div class="flex-grow-1">
                                            <div class="date-label">Start Date</div>
                                            <div class="date-value">{{ conge.startDate|date('F d, Y') }}</div>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="date-info">
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-calendar-x me-3"></i>
                                        <div class="flex-grow-1">
                                            <div class="date-label">End Date</div>
                                            <div class="date-value">{{ conge.endDate|date('F d, Y') }}</div>
                                        </div>
                                    </div>
                                </div>

                                <div class="text-center">
                                    {% set duration = date(conge.endDate).diff(date(conge.startDate)).days + 1 %}
                                    <div class="duration-badge">
                                        <i class="bi bi-hourglass-split"></i>
                                        <strong>{{ duration }}</strong> day{{ duration > 1 ? 's' : '' }}
                                    </div>
                                </div>
                            </div>

                            {# Action buttons - only show for pending requests #}
                            {% if conge.status == 'pending' %}
                                <div class="action-buttons">
                                    <button type="button" class="btn btn-warning" 
                                            onclick="toggleEditForm({{ conge.id }})">
                                        <i class="bi bi-pencil"></i>Edit
                                    </button>
                                    <form method="post" action="{{ path('conge_delete', {'id': conge.id}) }}" 
                                          onsubmit="return confirm('Are you sure you want to delete this leave request?');"
                                          class="d-inline">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ conge.id) }}">
                                        <button type="submit" class="btn btn-danger">
                                            <i class="bi bi-trash"></i>Delete
                                        </button>
                                    </form>
                                </div>

                                {# Edit form (hidden by default) #}
                                <div id="edit-form-{{ conge.id }}" class="edit-form" style="display: none;">
                                    <form method="post" action="{{ path('conge_edit', {'id': conge.id}) }}">
                                        <input type="hidden" name="_token" value="{{ csrf_token('edit' ~ conge.id) }}">
                                        
                                        <div class="form-group">
                                            <label class="form-label">Start Date</label>
                                            <input type="date" name="startDate" value="{{ conge.startDate|date('Y-m-d') }}" 
                                                   class="form-control" required>
                                        </div>
                                        
                                        <div class="form-group">
                                            <label class="form-label">End Date</label>
                                            <input type="date" name="endDate" value="{{ conge.endDate|date('Y-m-d') }}" 
                                                   class="form-control" required>
                                        </div>

                                        <div class="d-flex gap-2">
                                            <button type="button" class="btn btn-secondary flex-fill" 
                                                    onclick="toggleEditForm({{ conge.id }})">
                                                <i class="bi bi-x"></i>Cancel
                                            </button>
                                            <button type="submit" class="btn btn-primary flex-fill">
                                                <i class="bi bi-check"></i>Update
                                            </button>
                                        </div>
                                    </form>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="empty-state">
            <i class="bi bi-calendar-x empty-state-icon"></i>
            <h5>No Leave Requests Yet</h5>
            <p>You haven't submitted any leave requests. Start by creating your first request and we'll show them here!</p>
            <a href="{{ path('conge_new') }}" class="btn btn-primary btn-lg">
                <i class="bi bi-plus-circle me-2"></i>Request New Conge
            </a>
        </div>
    {% endif %}
</div>

<script>
function toggleEditForm(congeId) {
    const form = document.getElementById('edit-form-' + congeId);
    if (form.style.display === 'none') {
        form.style.display = 'block';
    } else {
        form.style.display = 'none';
    }
}
</script>
{% endblock %}